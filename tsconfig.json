{
	"compilerOptions": {
		"target": "ES5",
		"lib": ["es2019", "DOM", "ES2016", "ES2017"],
		"module": "ESNext",
		"outDir": "package",
		"esModuleInterop": true,
		"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true
	},
	"include": ["lib/**/*"]
}
